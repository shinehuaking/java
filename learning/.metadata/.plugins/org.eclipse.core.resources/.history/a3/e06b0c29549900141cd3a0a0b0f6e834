package com.huaking;

import java.net.URI;
import java.nio.file.FileSystems;
import java.nio.file.Path;
import java.nio.file.Paths;

public class PathTest {
	public static void main(String[] args) {
		Path p1 = Paths.get("/work/java");
		System.out.println(p1.toString());
//		Path p2 = Paths.get(args[0]);
		Path p3 = Paths.get(URI.create("file:///work/java"));
		System.out.println("path:" + p3.toString() + ",fileName:" + p3.getFileName() + ",getName:" + p3.getName(0) + "," + p3.getNameCount());
		System.out.println(FileSystems.getDefault());
		Path p4 = FileSystems.getDefault().getPath("/work/java");
	}
}
